<div class="ui centered grid container">

	<!-- title -->
	<div class="row mobile only">
		<div class="fourteen wide computer sixteen wide tablet column">
			<h1>Explore Blocks</h1>
		</div>
	</div>

	<!-- content -->
	<div class="ten wide computer sixteen wide tablet centered column">
	
		<!-- Current Block Count -->
		<div class="ui statistic">
			<div class="label">
				Current Block Count (<a href="api/block_count" target="_blank">API</a>)
			</div>
			<div class="value">
				{{ block_count | number:0 }}
			</div>
		</div>
	</div>
	<br style="clear:both"/>

	<!-- hash search -->
	<div ng-show="!submitted" class="row ng-hide">
		<div class="ui form field hash_search ten wide computer sixteen wide tablet centered column">
			<textarea ng-model="hash" placeholder="Enter a hash number" rows="2" autocomplete="off"></textarea>
		</div>
	</div>

	<!-- hash explorer submission -->
	<div ng-show="!submitted" class="row ng-hide">
		<div class="ten wide computer sixteen wide tablet centered column">
			<button
			ng-disabled="button.disabled == true"
			ng-class="button.class"
			class="ui fluid button"
			ng-click="explore()">
				<i ng-class="button.icon" class="icon"></i>&nbsp;{{ button.title }}
			</button>
		</div>
	</div>

	<!-- new search button -->
	<div ng-show="submitted" class="row ng-hide">
		<div class="twelve wide computer sixteen wide tablet centered column">
			<button
			class="ui green button"
			ng-click="newSearch()">
				<i class="search icon"></i>New Search
			</button>
		</div>
	</div>

	<!-- response -->
	<div ng-show="submitted" class="row ng-hide">
		<div class="twelve wide computer sixteen wide tablet centered column">
			<div class="ui piled segment">
				<h4 class="ui header">Exploring: <span class="word-wrap">{{ hash }}</span></h4>
				<div class="ui relaxed divided list">
					<div class="item" ng-repeat="(key, obj) in response track by $index">
						<i ng-class="obj.icon" class="large middle aligned icon"></i>
						<div class="content">
							<span class="header capitalize">{{ key }}</span>
							<div class="description break-word">{{ obj.value }}</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>